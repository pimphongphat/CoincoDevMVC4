@using Telerik.Web.Mvc.UI
@model Coinco.SMS.Website.Models.RepairType

 @{Html.Telerik().Grid((IEnumerable<Coinco.SMS.Website.Models.RepairType>)ViewData["RepairLinesList"])
                .Name("RepairLinesGrid")
                .DataKeys(keys =>
                {
                    keys.Add(c => c.SerialNumber).RouteKey("UniqueId");
                })
                .Columns(columns =>
                {
                    columns.Command(comments => comments.Delete().ButtonType(GridButtonType.Image)).Title("Delete").Width(10);
                    columns.Bound(c => c.UniqueId).Visible(false);
                    columns.Bound(c => c.ServiceObjectRelation).Title("SO Relation").Width(100);
                    columns.Bound(c => c.Description).Title("Description").Width(100);
                    columns.Bound(c => c.ConditionId).Title("Condition").Width(80);
                    columns.Bound(c => c.SymptomAreaId).Title("Symptom Area").Width(110);
                    columns.Bound(c => c.SymptomCodeId).Title("Symptom Code").Width(110);
                    columns.Bound(c => c.DiagonsisAreaId).Title("Diagnosis Area").Width(105);
                    columns.Bound(c => c.DiagonsisCodeId).Title("Diagnosis Code").Width(110);
                    columns.Bound(c => c.ResolutionId).Title("Resolution").Width(80);
                    columns.Bound(c => c.RepairStageId).Title("Repair Stage").Width(100);
                    
                   
                })
                        .DataBinding(dataBinding =>
                        {
                            dataBinding.Ajax().OperationMode(GridOperationMode.Client).Select("_Selection_RepairLines", "RepairLines")
                                .Delete("_DeleteRepairLine", "RepairLines")
                                .Enabled(true);
                        }
              )
                .HtmlAttributes(new { style = "font-size: 8pt; font-family: Verdana; width:950px" })
                .Scrollable()
                .Pageable((pager => pager.PageSize(10)))
                .Sortable()
                .Selectable()
                .Filterable()
                .Render();
   
                }

<script type ="text/javascript"">
    function onRowSelected(e) {

        serviceOrderNumber = e.row.cells[0].innerHTML;

        // update ui text
        $('#customerID').text(serviceOrderNumber);

        serviceOrderLineGrid.rebind();

    }
</script>